<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.image.Image?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.ColumnConstraints?>
<?import javafx.scene.layout.FlowPane?>
<?import javafx.scene.layout.GridPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.Region?>
<?import javafx.scene.layout.RowConstraints?>
<?import javafx.scene.layout.VBox?>

<HBox id="cardPane" fx:id="cardPane" xmlns="http://javafx.com/javafx/8" xmlns:fx="http://javafx.com/fxml/1">
  <GridPane HBox.hgrow="ALWAYS">
    <columnConstraints>
      <ColumnConstraints hgrow="SOMETIMES" minWidth="10" prefWidth="150" />
    </columnConstraints>
    <VBox fx:id="cardRows" alignment="CENTER_LEFT" minHeight="105" GridPane.columnIndex="0">
      <padding>
        <Insets bottom="5" left="15" right="5" top="5" />
      </padding>
      <HBox alignment="CENTER_LEFT" spacing="5">
        <Label fx:id="id" styleClass="cell_big_label">
          <minWidth>
            <!-- Ensures that the label text is never truncated -->
            <Region fx:constant="USE_PREF_SIZE" />
          </minWidth>
        </Label>
        <Label fx:id="name" styleClass="cell_big_label" text="\$first" />
      </HBox>
      <FlowPane fx:id="tags" />
         <HBox alignment="CENTER_LEFT" spacing="5">
            <children>
               <ImageView fitHeight="16.0" fitWidth="16.0" pickOnBounds="true" preserveRatio="true">
                  <image>
                     <Image url="@../images/phone_icon.png" />
                  </image>
               </ImageView>
            <Label fx:id="phone" text="\$phone" />
            </children>
         </HBox>
         <HBox fx:id="telegramBox" alignment="CENTER_LEFT" spacing="5" />
         <HBox fx:id="githubBox" alignment="CENTER_LEFT" onMouseClicked="#openGithub" onMouseEntered="#changeGithubColorWhenHovered" onMouseExited="#changeGithubColorWhenLeft" spacing="5" />
         <HBox fx:id="emailBox" alignment="CENTER_LEFT" onMouseClicked="#emailtoContact" onMouseEntered="#changeEmailColorWhenHovered" onMouseExited="#changeEmailColorWhenLeft" spacing="5" />
         <HBox fx:id="addressBox" alignment="CENTER_LEFT" spacing="5" />
    </VBox>
      <rowConstraints>
         <RowConstraints />
      </rowConstraints>
  </GridPane>
</HBox>
